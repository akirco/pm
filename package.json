{
  "name": "pm",
  "displayName": "pm",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "logo-small.png",
  "repository": {
    "url": ""
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pm.newProject",
        "title": "New Project",
        "category": "pm"
      },
      {
        "command": "pm.openProject",
        "title": "Open Project",
        "category": "pm"
      },
      {
        "command": "pm.delectProject",
        "title": "Delete Project",
        "category": "pm"
      }
    ],
    "configuration": [
      {
        "title": "ProjectManager",
        "properties": {
          "ProjectManager.root": {
            "type": "string",
            "default": "",
            "description": "The root folder of the projects"
          },
          "ProjectManager.category": {
            "type": "string",
            "description": "The categories of the projects",
            "default": "Vue,React,Node,Python,Rust,Go,PHP,Java,Lua,RemoteRepository,Temp"
          },
          "ProjectManager.loadPresetPlugins": {
            "type": "boolean",
            "description": "Whether to load plugins for different project types",
            "default": false
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "~20.2.5",
    "@types/vscode": "^1.78.1",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.42.0",
    "glob": "^10.2.7",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.86.0",
    "webpack-cli": "^5.1.4"
  }
}
